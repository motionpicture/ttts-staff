<%
let routeName = '';
if (req.hasOwnProperty('route')) {
    routeName = req.route.path;
}

let currentLang = locale;
let pageId = (routeName) ? 'page_'+routeName.replace(/\//,'').replace(/:[^\/]*\//g,'').replace(/\//g,'_') : '';
let pageClassName = (routeName) ? 'page-'+routeName.replace(/\//,'').replace(/:[^\/]*\//g,'').replace(/\//g,' page-') : '';
pageClassName = pageClassName + ' page-'+currentLang;
%>
<!DOCTYPE html>
<html lang="<%- currentLang %>">
<head>
<meta charset="utf-8">
<title><%= __('Title') %></title>
<meta name="description" content="<%= conf.get('meta.description') %>">
<meta name="keywords" content="<%= conf.get('meta.keywords') %>">
<meta name="viewport" content="width=device-width,user-scalable=no,maximum-scale=1">
<meta name="format-detection" content="telephone=no">

<link href="/css/style.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>

<script src="/js/common.js"></script>
<script src="/js/screen.js"></script>

<%- include('./layouts/_ga') %>
</head>

<body id="<%- pageId %>" class="<%- pageClassName %>">

<%- include('./layouts/_header') %>

<div class="container">
    <%- body %>
</div>

<%- include('./layouts/_footer') %>
<%- include('./layouts/_showSeatMap') %>

</body>
</html>