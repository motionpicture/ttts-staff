<%
let routeName = '';
if (req.hasOwnProperty('route')) {
    routeName = req.route.path;
}
%>
<header>
    <div class="container">

        <a href="javascript:void(0);" class="header-logo"><img src="/images/common/logo.png" alt="TTTS"></a>

        <div class="header-menu">
            <% if (routeName === '/mypage' && req.staffUser.isAuthenticated()) { %>
            <div class="menu-staff">
                <p class="myname"><%= req.staffUser.get('name').ja %> <%= __('Mr{{name}}', {name: req.staffUser.get('signature')}) %></p>
                <div class="staff-btns">
                    <a class="btn btn-logout" href="/staff/logout"><span><%- __('Button.Logout') %></span></a>
                    <a class="btn btn-newticket" href="/staff/reserve/start"><span><%- __('Button.NewTicket') %></span></a>
                    <% if (req.staffUser.get('is_admin')) { %>
                    <a class="btn btn-release" href="/staff/mypage/release"><span><%- __('Button.ReleaseSeats') %></span></a>
                    <% } %>
                </div>
            </div>

            <% } else if (routeName !== '/staff/mypage' && req.staffUser.isAuthenticated()) { %>
            <div class="menu-staff">
                <p class="myname"><%= req.staffUser.get('name').ja %> <%= __('Mr{{name}}', {name: req.staffUser.get('signature')}) %></p>
                <a href="/staff/mypage"><%- __('Button.MyPage') %></a> / <a href="/staff/logout"><%- __('Button.Logout') %></a>
            </div>

            <% } else if (routeName.indexOf('login') >= 0) { %>
            <a href="javascript:void(0)" class="update-locale" data-locale="en">English</a>
            <a href="javascript:void(0)" class="update-locale" data-locale="ja">日本語</a>

            <% } %>
        </div>
    </div>
</header>
