<%
let routeName = '';
if (req.hasOwnProperty('route')) {
    routeName = req.route.path;
}
%>
<header>
    <div class="container">

        <a href="javascript:void(0);" class="header-logo"><img src="/images/common/logo.png" alt="CHEVRE"></a>

        <div class="header-menu">

            <% if (routeName.indexOf('mypage') >= 0 && req.sponsorUser.isAuthenticated()) { %>
                <div class="menu-staff">
                    <p class="myname"><%= __('Mr{{name}}', {name: req.sponsorUser.get('name')}) %></p>
                    <div class="staff-btns">
                        <a class="btn btn-logout" href="/sponsor/logout"><span><%- __('Button.Logout') %></span></a>
                        <a class="btn btn-newticket" href="/sponsor/reserve/start"><span><%- __('Button.NewTicket') %></span></a>
                    </div>
                </div>

            <% } else if (routeName === '/sponsor/cancel') { %>
                <a href="/sponsor/reserve/start"><%- __('Button.NewTicket') %></a>
                <a href="javascript:void(0)" class="update-locale" data-locale="en">English</a>
                <a href="javascript:void(0)" class="update-locale" data-locale="ja">日本語</a>

            <% } else if (routeName.indexOf('mypage') < 0 && req.sponsorUser.isAuthenticated()) { %>
                <div class="menu-user">
                    <p class="myname"><%= __('Mr{{name}}', {name: req.sponsorUser.get('name')}) %></p>
                    <a href="/sponsor/cancel"><%- __('Button.Cancel') %></a> / <a href="/sponsor/logout"><%- __('Button.Logout') %></a>
                </div>

            <% } else if (routeName.indexOf('login') >= 0) { %>
                <a href="javascript:void(0)" class="update-locale" data-locale="en">English</a>
                <a href="javascript:void(0)" class="update-locale" data-locale="ja">日本語</a>

            <% } %>

        </div>
    </div>
</header>
