<div class="loginform loginform-mypage">
    <h2>窓口担当者ログイン</h2>


    <% if (validation) { %>
    <% validation.forEach(function (error) { %>
    <p class="errmsg"><%- error.msg %></p>
    <% }) %>
    <% } %>

    <form method="post">
        <div class="form-group form-inline">
            <labeL><%- __('Form.FieldName.userId') %></labeL>
            <input type="text" name="userId" id="id_userId" class="form-control" value="<%- userId %>">
        </div>
        <div class="form-group form-inline">
            <label><%- __('Form.FieldName.password') %></label>
            <input type="password" name="password" id="id_password" class="form-control" value="<%- password %>">
        </div>
        <label for="id_remember"><input id="id_remember" name="remember" type="checkbox"><%- __('Form.FieldName.remember') %></label>
        <a class="btn btn-big btn-login" href="javascript:void(0);"><span><%- __('Button.Login') %></span></a>
    </form>
</div>

<script>
$(function(){
    $('.btn-login').on('click', function(){
        $('form').submit();
    });
});
</script>

